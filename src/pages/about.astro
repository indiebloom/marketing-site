---
import desertDark from '../assets/img/DesertDark2.png'
import desertLight from '../assets/img/DesertLight2.png'
import alexHeadshot from '../assets/img/alex-headshot-square.jpg'
import juneHeadshot from '../assets/img/june-headshot-square.jpg'
import zoeHeadshot from '../assets/img/zoe-headshot-square.jpg'
import Headliner from '../components/Headliner.astro'
import HeroText from '../components/HeroText.astro'
import Profile from '../components/Profile.astro'
import SectionHeading from '../components/SectionHeading.astro'
import DefaultLayout from '../layouts/DefaultLayout.astro'
---

<DefaultLayout>
  <section class="my-8">
    <div class="container">
      <Headliner lightModeImg={desertLight} darkModeImg={desertDark}>
        <div class="flex flex-col gap-8 p-8 text-center">
          <h2 class="text-4xl font-extrabold">
            <HeroText text="Our Mission" />
          </h2>
          <h3 class="text-xl font-light italic">
            <span>"Create the world's</span>
            <span class="text-2xl">
              <HeroText text="LowestÂ Stress" secondary />
            </span>
            <span>task manager"</span>
          </h3>
        </div>
      </Headliner>
    </div>
  </section>
  <section class="my-8">
    <div class="container">
      <SectionHeading text="Our Team" />
      <div class="grid grid-cols-1 gap-12 py-8 md:grid-cols-2 lg:grid-cols-3">
        <Profile
          personName="June Peters"
          personTitle="Co-Founder and CEO"
          linkedInUrl="https://www.linkedin.com/in/saoirsejune/"
          imgUrl={juneHeadshot}
        />
        <Profile
          personName="Alex Heitzmann"
          personTitle="Co-Founder and CTO"
          ,
          linkedInUrl="https://www.linkedin.com/in/alex-heitzmann/"
          imgUrl={alexHeadshot}
        />
        <Profile personName="Zoe Fisher" personTitle="Founding Engineer" body="" imgUrl={zoeHeadshot} />
      </div>
    </div>
  </section>
</DefaultLayout>
